<h2 class="page-header">Register</h2>
 <% if(errors.length>0){  %>
       <% for (const error of errors){ %>
         <li><%= error.msg %> </li>
       <% } %>
 <% } %>
   
   
     
<form method="post" class="registerForm" novalidate>
   <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" placeholder="Name" value="<%= formdata.name %>" name="name">
  </div>
  <div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" placeholder="Username" value="<%= formdata.username %>" name="username">
  </div>
   <div class="form-group">
    <label>Email</label>
    <input type="email" class="form-control" placeholder="Email"  value="<%= formdata.email %>" name="email">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" placeholder="Password" value="<%= formdata.password %>"  name="password">
  </div>
  <div class="form-group">
    <label>Confirm Password</label>
    <input type="password" class="form-control" placeholder="Password"  value="<%= formdata.password2 %>" name="password2">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>


